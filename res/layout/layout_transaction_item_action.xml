<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/action_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical" >

        <include layout="@layout/base_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageButton
                android:id="@+id/button_discard"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/action_discard"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_action_discard" />

            <ImageButton
                android:id="@+id/button_cancel"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/action_cancel"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_action_cancel" />

            <ImageButton
                android:id="@+id/button_accept"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/action_accept"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/ic_action_accept" />
        </LinearLayout>
    </LinearLayout>

</merge>